        <div class="calculator">
            <!-- What is X% of Y? -->
            <div class="calc-section">
                <h3>What is <input type="number" id="percent1" placeholder="25"> % of <input type="number" id="number1" placeholder="100"> ?</h3>
                <button onclick="calculate1()">Calculate</button>
                <span class="result" id="result1"></span>
            </div>
            
            <!-- X is what percent of Y? -->
            <div class="calc-section">
                <h3><input type="number" id="number2" placeholder="25"> is what percent of <input type="number" id="total2" placeholder="100"> ?</h3>
                <button onclick="calculate2()">Calculate</button>
                <span class="result" id="result2"></span>
            </div>
            
            <!-- X is Y% of what? -->
            <div class="calc-section">
                <h3><input type="number" id="number3" placeholder="25"> is <input type="number" id="percent3" placeholder="25"> % of what?</h3>
                <button onclick="calculate3()">Calculate</button>
                <span class="result" id="result3"></span>
            </div>
            
            <!-- Percentage Change -->
            <div class="calc-section">
                <h3>Percentage change from <input type="number" id="old" placeholder="100"> to <input type="number" id="new" placeholder="150"></h3>
                <button onclick="calculateChange()">Calculate</button>
                <span class="result" id="resultChange"></span>
            </div>
